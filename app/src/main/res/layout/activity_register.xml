<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.RegisterActivity">
    <RelativeLayout
            android:id="@+id/xReLay_Header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_ht"
            android:background="@color/color_bg_green">

        <RelativeLayout
                android:id="@+id/xRelay_RegBack"
                android:layout_width="@dimen/header_ht"
                android:layout_height="@dimen/header_ht"
                android:gravity="center">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back" />

        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="@color/color_white"
                android:textSize="20dp" />


    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/xReLay_Header"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical">


            <EditText
                    android:id="@+id/xEtReg_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_white_light_gray"
                    android:hint="FullName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_edit_text"
                    android:inputType="textNoSuggestions"/>

            <EditText
                    android:id="@+id/xEtReg_Username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_corner_white_light_gray"
                    android:hint="UserName"
                    android:textColor="@color/color_black"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/color_edit_text" />

            <EditText
                    android:id="@+id/xEtReg_MobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_corner_white_light_gray"
                    android:hint="Mobile No."
                    android:textColor="@color/color_black"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/color_edit_text" />

            <EditText
                    android:id="@+id/xEtReg_Email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_corner_white_light_gray"
                    android:hint="Email"
                    android:textColor="@color/color_black"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/color_edit_text" />

            <EditText
                    android:id="@+id/xEtReg_Password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_corner_white_light_gray"
                    android:hint="Password"
                    android:textColor="@color/color_black"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/color_edit_text" />

            <EditText
                    android:id="@+id/xEtReg_Conf_Password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/color_black"
                    android:background="@drawable/rounded_corner_white_light_gray"
                    android:hint="Confirm Password"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/color_edit_text" />


            <TextView
                    android:id="@+id/xTvReg_CreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_corner_green_light_gray"
                    android:gravity="center"
                    android:text="Create Account"
                    android:textColor="@color/color_white"
                    android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>